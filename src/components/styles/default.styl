*
  box-sizing border-box

.link
  color #f39c12
  cursor pointer
  &.default
    color #e67e22
  &:hover
    color #e67e22
    text-decoration underline

.button
  height 34px
  border-radius 4px
  font-weight 500
  color #fff
  background-color #FFCA4F
  border none
  cursor pointer
  &:hover
    background-color #eeb93e
  &:active
    background-color #f39c12
    outline none

input[type="password"],
input[type="text"]
  width 257px
  height 33px
  border-radius 4px
  border 1px solid #cfd2db
  outline none
  padding-left 19px
  color #5e616b

ul
  list-style-type none
  margin 0
  padding 0